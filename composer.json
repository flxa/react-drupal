{
    "name": "pnx/pnx-project",
    "description": "A PreviousNext project starter kit.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "composer/installers": "~1.0",
        "cweagans/composer-patches": "~1.5",
        "drupal-composer/drupal-scaffold": "~2.0",
        "drupal/admin_toolbar": "~1.14",
        "drupal/core": "~8.2",
        "drupal/ctools": "~3.0",
        "drupal/metatag": "~1.0",
        "drupal/monolog": "^1.0@alpha",
        "drupal/pathauto": "~1.0",
        "drupal/slushi_cache": "~1.0",
        "drupal/swiftmailer": "^1.0@alpha",
        "drupal/token": "~1.0",
        "drush/drush": "~8.1",
        "html2text/html2text": "~4.0.1"
    },
    "require-dev": {
        "drupal/coder": "~8.2",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8"
    },
    "scripts": {
        "drupal-scaffold": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/core": [
                "drupal/core"
            ],
            "app/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "app/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "app/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true
    }
}
