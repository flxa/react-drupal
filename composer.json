{
    "name": "pnx/pnx-project",
    "description": "A PreviousNext project starter kit.",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "composer/installers": "~1.0",
        "cweagans/composer-patches": "~1.5",
        "drupal-composer/drupal-scaffold": "~2.0",
        "drupal/admin_toolbar": "~1.19",
        "drupal/components": "~1.0",
        "drupal/core": "~8.3",
        "drupal/ctools": "~3.0",
        "drupal/drush-cmi-tools": "dev-8.x-1.x",
        "drupal/ds": "~3.1",
        "drupal/field_group": "~1.0",
        "drupal/linkit": "^5.0",
        "drupal/metatag": "~1.0",
        "drupal/monolog": "^1.0@alpha",
        "drupal/pathauto": "~1.0",
        "drupal/redirect": "^1.0@alpha",
        "drupal/skipper_affinity": "dev-8.x-1.x",
        "drupal/slushi_cache": "~1.0",
        "drupal/swiftmailer": "^1.0@beta",
        "drupal/token": "~1.0",
        "drush/drush": "~8.1"
    },
    "require-dev": {
        "behat/mink": "1.7.x-dev",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/coder": "~8",
        "drupal/console": "~1.0",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": ">=4.8.28 <5",
        "symfony/browser-kit": ">=2.8.13 <3.0",
        "symfony/css-selector": "~2.8",
        "vimeo/psalm": "^0.3.39"
   },
    "scripts": {
        "drupal-scaffold": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "git",
            "url": "https://github.com/previousnext/drush_cmi_tools.git"
        },
        {
            "type": "git",
            "url": "https://github.com/previousnext/skipper_affinity.git"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/core": [
                "drupal/core"
            ],
            "app/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "app/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "app/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "app/modules/custom/{$name}": [
              "type:drupal-custom-module"
            ],
            "app/themes/custom/{$name}": [
              "type:drupal-custom-theme"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true
    }
}
